
<h1 class='p-heading'><%= "#{@votes.politician}"%> </h1> 
<p><%=link_to "Unfollow", "/follow?name=#{@votes.politician}", method: :delete %> </p>
<div class="graph" id='chartContainer'><%= @chart.render() %></div>
<div class='politicianVotes'>
  <% @votes.votes.each do |vote|%>
    <div class='vote'>
      <ul>
        <% if vote.type == "Bill"%>
        <li><%= link_to "View Bill", "/bill?id=#{vote.bill_id}"%> </li>
        <% end %>
        <h4 class="title">Title: <%=vote.bill_title%></h4>
        <li class="chamber">Chamber: <%=vote.chamber%></li>
        <li class="p-vote"><%=@votes.politician%> voted <%= vote.vote_of_politician%> on this bill.</li>
        <li class="spread">There were <%=vote.votes_for%> votes in favor, <%= vote.votes_against%> votes against, and <%=vote.abstentions%> abstentions.</li>
        <li class="date">Vote took place on <%=vote.date%> at <%=vote.time%></li>
        </ul>
    </div>
  <% end %>
</div>