<div id='bill-container'>
  <h1 class='centered'><%= @bill.short_title%></h1>
 <% if @bill.d_cosponsors == 0  && @bill.r_cosponsors == 0 %> 
  <div class="sponsor">
    Sponsored by <%="#{@bill.sponsor} (#{@bill.sponsor_party}, #{@bill.sponsor_state})"%>
  </div>
 <% else %>
  <div class="sponsor">
    Sponsored by <%="#{@bill.sponsor} (#{@bill.sponsor_party}, #{@bill.sponsor_state}) along with #{@bill.d_cosponsors} Democrat(s) and #{@bill.r_cosponsors} Republican(s)"%>
  </div>
 <% end %>

  <p id="bill-summary"><%=@bill.summary%></p>
 <h4 class='centered'>Latest Legislative Action: <%=@bill.last_action%></h4>
  <div class='graph' id="chartContainer-1"><%= @charts[0].render() %></div>
  <% unless @charts[1].nil?%>
    <div class='graph' id="chartContainer-2"><%= @charts[1].render() %></div>
  <% end %>
  <% unless @charts[2].nil?%>
    <div class='graph' id="chartContainer-3"><%= @charts[2].render() %></div> 
  <% end %>
</div>